#!/bin/sh
IP=192.168.1.100
PORT=80
DIR=motionSensor/event
echo "Query $IP ..."
curl -v -0 -A '' -X SUBSCRIBE -H 'Accept: ' -H 'Content-type: text/xml; charset="utf-8"' \
    -H 'CALLBACK: "<http://192.168.1.176:1234/testupnp>"' \
    -H 'NT: upnp:event' \
    -H 'TIMEOUT: Second-600' \
    -H 'STATEVAR: State, NoVariable' \
    -s http://$IP:$PORT/$DIR
